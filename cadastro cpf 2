    <main>
        <?php
        // Configura√ß√µes do banco
        $servidor = "localhost";
        $usuario = "root";
        $senha = "";
        $banco = "sistema_cpf";

        // Processar o formul√°rio de login
        if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST["entrar"])) {
            $cpf_login = trim($_POST["cpf_login"]);
            
            // Valida√ß√µes
            if (empty($cpf_login)) {
                echo "<div class='mensagem erro'>‚ö†Ô∏è CPF √© obrigat√≥rio.</div>";
            } elseif (!ctype_digit($cpf_login) || strlen($cpf_login) != 11) {
                echo "<div class='mensagem erro'>‚ö†Ô∏è CPF deve ter exatamente 11 n√∫meros.</div>";
            } else {
                // Conectar e verificar se CPF existe
                $conn = new mysqli($servidor, $usuario, $senha, $banco);
                
                if ($conn->connect_error) {
                    echo "<div class='mensagem erro'>‚ùå Erro de conex√£o com o banco: " . $conn->connect_error . "</div>";
                } else {
                    // Usar declara√ß√£o preparada para seguran√ßa
                    $stmt = $conn->prepare("SELECT nome, cpf, data_cadastro FROM cliente WHERE cpf = ?");
                    $stmt->bind_param("s", $cpf_login);
                    $stmt->execute();
                    $result = $stmt->get_result();
                    
                    if ($result->num_rows > 0) {
                        // CPF encontrado - mostrar mensagem de boas-vindas
                        $usuario = $result->fetch_assoc();
                        
                        echo "<div class='welcome-container'>";
                        echo "<h2>üéâ Bem-vindo ao Sistema!</h2>";
                        echo "<div class='mensagem sucesso'>‚úÖ Login realizado com sucesso!</div>";
                        echo "<div class='user-info'>";
                        echo "<h3>Informa√ß√µes do Cadastro:</h3>";
                        echo "<p><strong>Nome:</strong> " . htmlspecialchars($usuario['nome']) . "</p>";
                        echo "<p><strong>CPF:</strong> " . $usuario['cpf'] . "</p>";
                        echo "<p><strong>Data de Cadastro:</strong> " . date('d/m/Y H:i', strtotime($usuario['data_cadastro'])) . "</p>";
                        echo "</div>";
                        echo "<p style='margin-top: 20px; font-size: 18px;'>Agora voc√™ tem acesso completo aos servi√ßos da Receita Federal.</p>";
                        
                        // Bot√µes de a√ß√£o
                        echo "<div class='botoes-acoes'>";
                        echo "<a href='index.php' class='btn-acao btn-primary'>üìù NOVO CADASTRO</a>";
                        echo "<a href='#' class='btn-acao btn-secondary'>üîç CONSULTAR</a>";
                        echo "<a href='entrar.php' class='btn-acao btn-danger' onclick='return confirm(\"Tem certeza que deseja sair?\")'>üö™ SAIR</a>";
                        echo "</div>";
                        
                        echo "</div>";
                    } else {
                        // CPF n√£o encontrado
                        echo "<div class='login-form'>";
                        echo "<h2 style='color: #004b8d; margin-bottom: 20px;'>Entrar no Sistema</h2>";
                        echo "<div class='mensagem erro'>";
                        echo "‚ùå CPF n√£o cadastrado no sistema.<br><br>";
                        echo "√â necess√°rio realizar o cadastro antes de entrar.";
                        echo "</div>";
                        echo "<form method='POST' action=''>";
                        echo "<div class='form-group'>";
                        echo "<label for='cpf_login'>Digite seu CPF:</label>";
                        echo "<input type='text' id='cpf_login' name='cpf_login' value='" . htmlspecialchars($cpf_login) . "' 
                               placeholder='CPF com 11 d√≠gitos' minlength='11' maxlength='11' required pattern='[0-9]{11}'>";
                        echo "</div>";
                        echo "<input type='submit' name='entrar' value='TENTAR NOVAMENTE'>";
                        echo "</form>";
                        echo "<p style='margin-top: 20px; text-align: center;'>";
                        echo "<a href='index.php' style='color: #0073e6; text-decoration: none;'>‚Ü©Ô∏è Voltar para cadastro</a>";
                        echo "</p>";
                        echo "</div>";
                    }
                    
                    $stmt->close();
                    $conn->close();
                }
            }
        } else {
            // Mostrar formul√°rio de login inicial
            echo "<div class='login-form'>";
            echo "<h2 style='color: #004b8d; margin-bottom: 20px;'>Entrar no Sistema</h2>";
            echo "<p style='margin-bottom: 20px;'>Digite seu CPF para acessar o sistema:</p>";
            echo "<form method='POST' action=''>";
            echo "<div class='form-group'>";
            echo "<label for='cpf_login'>CPF (apenas n√∫meros):</label>";
            echo "<input type='text' id='cpf_login' name='cpf_login' 
                   placeholder='CPF com 11 d√≠gitos' minlength='11' maxlength='11' required pattern='[0-9]{11}'>";
            echo "</div>";
            echo "<input type='submit' name='entrar' value='ENTRAR'>";
            echo "</form>";
            echo "</div>";
        }
        ?>
    </main>

    <script>
        // Formata√ß√£o autom√°tica do CPF (apenas n√∫meros)
        document.addEventListener('DOMContentLoaded', function() {
            const cpfInput = document.getElementById('cpf_login');
            if (cpfInput) {
                cpfInput.addEventListener('input', function(e) {
                    var value = e.target.value.replace(/\D/g, '');
                    if (value.length > 11) value = value.slice(0, 11);
                    e.target.value = value;
                });
            }
        });

        // Confirma√ß√£o ao sair
        function confirmarSaida() {
            return confirm('Tem certeza que deseja sair do sistema?');
        }
    </script>
