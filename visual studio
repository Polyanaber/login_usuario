        <?php
        // Configura√ß√µes do banco
        $servidor = "localhost";
        $usuario = "root";
        $senha = ""; // Coloque sua senha se tiver
        $banco = "login_usuarios";
        $porta = 3306;

        // Fun√ß√£o para criar o banco e tabela automaticamente
        function criarBancoEAutomaticamente($servidor, $usuario, $senha, $banco, $porta) {
            // Conectar sem selecionar banco
            $conn = new mysqli($servidor, $usuario, $senha, '', $porta);
            
            if ($conn->connect_error) {
                return "Erro na conex√£o: " . $conn->connect_error;
            }
            
            // Criar banco se n√£o existir
            $sql = "CREATE DATABASE IF NOT EXISTS $banco";
            if (!$conn->query($sql)) {
                return "Erro ao criar banco: " . $conn->error;
            }
            
            // Selecionar o banco
            $conn->select_db($banco);
            
            // Criar tabela se n√£o existir
            $sql = "CREATE TABLE IF NOT EXISTS cliente (
                id INT AUTO_INCREMENT PRIMARY KEY,
                cpf VARCHAR(11) UNIQUE NOT NULL,
                data_cadastro TIMESTAMP DEFAULT CURRENT_TIMESTAMP
            )";
            
            if (!$conn->query($sql)) {
                return "Erro ao criar tabela: " . $conn->error;
            }
            
            $conn->close();
            return "sucesso";
        }

        // Verifica se o formul√°rio foi enviado
        if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST["cadastrar"])) {
            
            // Captura e limpa o CPF
            $cpf = trim($_POST["cpf"]);
            
            // Valida√ß√µes
            if (empty($cpf)) {
                echo "<div class='mensagem erro'>‚ö†Ô∏è Por favor, digite um CPF.</div>";
            } elseif (!ctype_digit($cpf)) {
                echo "<div class='mensagem erro'>‚ö†Ô∏è O CPF deve conter apenas n√∫meros.</div>";
            } elseif (strlen($cpf) != 11) {
                echo "<div class='mensagem erro'>‚ö†Ô∏è O CPF deve conter exatamente 11 d√≠gitos.</div>";
            } else {
                // Tenta criar o banco automaticamente
                $resultado = criarBancoEAutomaticamente($servidor, $usuario, $senha, $banco, $porta);
                
                if ($resultado !== "sucesso") {
                    echo "<div class='mensagem erro'>‚ùå $resultado</div>";
                } else {
                    // Agora conecta ao banco j√° criado
                    try {
                        $conn = new mysqli($servidor, $usuario, $senha, $banco, $porta);
                        
                        if ($conn->connect_error) {
                            throw new Exception("Erro na conex√£o: " . $conn->connect_error);
                        }
                        
                        // Prepara e executa a query
                        $sql = "INSERT INTO cliente (cpf) VALUES (?)";
                        $stmt = $conn->prepare($sql);
                        
                        if (!$stmt) {
                            throw new Exception("Erro ao preparar query: " . $conn->error);
                        }
                        
                        $stmt->bind_param("s", $cpf);
                        
                        if ($stmt->execute()) {
                            echo "<div class='mensagem sucesso'>‚úÖ CPF <strong>$cpf</strong> cadastrado com sucesso!</div>";
                        } else {
                            if ($conn->errno == 1062) {
                                echo "<div class='mensagem aviso'>‚ö†Ô∏è Este CPF <strong>$cpf</strong> j√° est√° cadastrado no sistema.</div>";
                            } else {
                                throw new Exception("Erro ao cadastrar: " . $conn->error);
                            }
                        }
                        
                        $stmt->close();
                        $conn->close();
                        
                    } catch (Exception $e) {
                        echo "<div class='mensagem erro'>‚ùå " . $e->getMessage() . "</div>";
                    }
                }
            }
        }
        ?>

        <!-- Informa√ß√µes do sistema -->
        <div style="background: #e7f3ff; padding: 20px; border-radius: 8px; margin-top: 30px;">
            <h3 style="color: #004b8d; margin-bottom: 10px;">üîß Status do Sistema:</h3>
            <?php
            // Verificar status do banco
            $conn = new mysqli($servidor, $usuario, $senha, '', $porta);
            if (!$conn->connect_error) {
                // Verificar se o banco existe
                $result = $conn->query("SHOW DATABASES LIKE '$banco'");
                if ($result->num_rows > 0) {
                    echo "<p style='color: green;'>‚úÖ Banco de dados '$banco' existe</p>";
                    
                    // Verificar se a tabela existe
                    $conn->select_db($banco);
                    $result = $conn->query("SHOW TABLES LIKE 'cliente'");
                    if ($result->num_rows > 0) {
                        echo "<p style='color: green;'>‚úÖ Tabela 'cliente' existe</p>";
                        
                        // Contar registros
                        $result = $conn->query("SELECT COUNT(*) as total FROM cliente");
                        $row = $result->fetch_assoc();
                        echo "<p style='color: blue;'>üìä Total de CPFs cadastrados: <strong>{$row['total']}</strong></p>";
                    } else {
                        echo "<p style='color: orange;'>‚ö†Ô∏è Tabela 'cliente' n√£o existe</p>";
                    }
                } else {
                    echo "<p style='color: orange;'>‚ö†Ô∏è Banco de dados '$banco' n√£o existe</p>";
                }
                $conn->close();
            } else {
                echo "<p style='color: red;'>‚ùå N√£o foi poss√≠vel conectar ao MySQL</p>";
            }
            ?>
        </div>

        <div style="background: #fff3cd; padding: 15px; border-radius: 8px; margin-top: 20px;">
