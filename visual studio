                    <input type="text" id="cpf" name="cpf" minlength="11" maxlength="11" 
                           placeholder="Com 11 d√≠gitos" required pattern="[0-9]{11}">
                </div>
                <input type="submit" name="cadastrar" value="Cadastrar CPF">
