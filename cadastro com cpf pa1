        <?php
        // Configura√ß√µes do banco - VERS√ÉO MELHORADA
        $servidor = "localhost";
        $usuario = "root";
        $senha = ""; // Tente "root" ou "password" se esta n√£o funcionar
        $banco = "sistema_cpf";
        
        echo "<div class='debug-info'>";
        echo "<h3>üîç Status do Sistema</h3>";
        
        // Testar se PHP est√° funcionando
        echo "<p><strong>PHP:</strong> ‚úÖ Funcionando</p>";
        
        // Testar conex√£o MySQL
        $conn_test = @new mysqli($servidor, $usuario, $senha);
        
        if ($conn_test->connect_error) {
            echo "<p style='color: red;'><strong>MySQL:</strong> ‚ùå Erro: " . $conn_test->connect_error . "</p>";
            echo "<p><strong>Solu√ß√µes para tentar:</strong></p>";
            echo "<ul>";
            echo "<li>Verifique se o MySQL est√° rodando no XAMPP</li>";
            echo "<li>Tente senha: 'root' ou 'password'</li>";
            echo "<li>Execute via XAMPP: http://localhost/</li>";
            echo "</ul>";
        } else {
            echo "<p style='color: green;'><strong>MySQL:</strong> ‚úÖ Conectado</p>";
            
            // Criar banco se n√£o existir
            if (!$conn_test->select_db($banco)) {
                $sql_create_db = "CREATE DATABASE IF NOT EXISTS $banco CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci";
                if ($conn_test->query($sql_create_db)) {
                    echo "<p style='color: green;'><strong>Banco de dados:</strong> ‚úÖ Criado: $banco</p>";
                } else {
                    echo "<p style='color: red;'><strong>Banco de dados:</strong> ‚ùå Erro: " . $conn_test->error . "</p>";
                }
            } else {
                echo "<p style='color: green;'><strong>Banco de dados:</strong> ‚úÖ Existente: $banco</p>";
            }
            
            // Selecionar o banco
            $conn_test->select_db($banco);
            
            // Criar tabela se n√£o existir
            $sql_create_table = "CREATE TABLE IF NOT EXISTS cliente (
                id INT AUTO_INCREMENT PRIMARY KEY,
                nome VARCHAR(100) NOT NULL,
                cpf VARCHAR(11) UNIQUE NOT NULL,
                data_cadastro DATETIME NOT NULL,
                data_registro TIMESTAMP DEFAULT CURRENT_TIMESTAMP
            ) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4";
            
            if ($conn_test->query($sql_create_table)) {
                echo "<p style='color: green;'><strong>Tabela:</strong> ‚úÖ Criada/Verificada: cliente</p>";
            } else {
                echo "<p style='color: red;'><strong>Tabela:</strong> ‚ùå Erro: " . $conn_test->error . "</p>";
            }
            
            $conn_test->close();
        }
        echo "</div>";

        // Processar o formul√°rio se foi enviado
        if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST["cadastrar"])) {
            
            // Capturar e sanitizar dados
            $nome = trim($_POST["nome"]);
            $cpf = trim($_POST["cpf"]);
            $data_hora = $_POST["data_hora"];
            
            // Valida√ß√µes
            $erros = [];
            
            if (empty($nome)) {
                $erros[] = "Nome √© obrigat√≥rio";
            } elseif (strlen($nome) < 3) {
                $erros[] = "Nome deve ter pelo menos 3 caracteres";
            }
            
            if (empty($cpf)) {
                $erros[] = "CPF √© obrigat√≥rio";
            } elseif (!ctype_digit($cpf) || strlen($cpf) != 11) {
                $erros[] = "CPF deve ter exatamente 11 n√∫meros";
            }
            
            if (empty($data_hora)) {
                $erros[] = "Data e hora s√£o obrigat√≥rios";
            }
            
            if (count($erros) > 0) {
                echo "<div class='mensagem erro'>‚ö†Ô∏è " . implode("<br>", $erros) . "</div>";
            } else {
                // Conectar e inserir
                $conn = new mysqli($servidor, $usuario, $senha, $banco);
                
                if ($conn->connect_error) {
                    echo "<div class='mensagem erro'>‚ùå Erro de conex√£o com o banco: " . $conn->connect_error . "</div>";
                } else {
                    // Usar declara√ß√£o preparada para seguran√ßa
                    $stmt = $conn->prepare("INSERT INTO cliente (nome, cpf, data_cadastro) VALUES (?, ?, ?)");
                    $stmt->bind_param("sss", $nome, $cpf, $data_hora);
                    
                    if ($stmt->execute()) {
                        echo "<div class='mensagem sucesso'>‚úÖ Cadastro realizado com sucesso!</div>";
                        echo "<div class='mensagem info'>";
                        echo "<strong>Nome:</strong> " . htmlspecialchars($nome) . "<br>";
                        echo "<strong>CPF:</strong> $cpf<br>";
                        echo "<strong>Data/Hora:</strong> " . date('d/m/Y H:i', strtotime($data_hora));
                        echo "</div>";
                        
                        // Limpar formul√°rio ap√≥s cadastro bem-sucedido
                        echo "<script>
                            document.getElementById('nome').value = '';
                            document.getElementById('cpf').value = '';
                        </script>";
                    } else {
                        if ($conn->errno == 1062) {
                            echo "<div class='mensagem aviso'>‚ö†Ô∏è Este CPF j√° est√° cadastrado no sistema.</div>";
                        } else {
                            echo "<div class='mensagem erro'>‚ùå Erro ao cadastrar: " . $conn->error . "</div>";
                        }
                    }
                    
                    $stmt->close();
                    $conn->close();
                }
            }
        }
        ?>

        <!-- Exibir registros cadastrados -->
        <div class="registros">
            <h3 style="color: #004b8d; margin-bottom: 15px;">üìã CPFs Cadastrados no Sistema</h3>
            <?php
            // Conectar e buscar registros
            $conn = new mysqli($servidor, $usuario, $senha, $banco);
            if ($conn->connect_error) {
                echo "<p style='color: red;'>Erro ao conectar: " . $conn->connect_error . "</p>";
            } else {
                $sql = "SELECT nome, cpf, data_cadastro FROM cliente ORDER BY data_cadastro DESC LIMIT 10";
                $result = $conn->query($sql);
                
                if ($result && $result->num_rows > 0) {
                    echo "<p><strong>Total de registros:</strong> " . $result->num_rows . "</p>";
                    while ($row = $result->fetch_assoc()) {
                        echo "<div class='registro-item'>";
                        echo "<div class='cpf-info'>" . htmlspecialchars($row['nome']) . "</div>";
                        echo "<div><strong>CPF:</strong> " . $row['cpf'] . "</div>";
                        echo "<div class='data-info'><strong>Cadastrado em:</strong> " . date('d/m/Y H:i', strtotime($row['data_cadastro'])) . "</div>";
                        echo "</div>";
                    }
                } else {
                    echo "<p style='color: #666; text-align: center; padding: 20px;'>Nenhum CPF cadastrado ainda. Use o formul√°rio acima para cadastrar.</p>";
                }
                $conn->close();
            }
            ?>
        </div>

    </main>

    <script>
        // Definir data e hora atual como padr√£o
        document.addEventListener('DOMContentLoaded', function() {
            var now = new Date();
            // Ajustar para o fuso hor√°rio local
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            document.getElementById('data_hora').value = now.toISOString().slice(0, 16);
        });

        // Formata√ß√£o autom√°tica do CPF (apenas n√∫meros)
        document.getElementById('cpf').addEventListener('input', function(e) {
            var value = e.target.value.replace(/\D/g, '');
            if (value.length > 11) value = value.slice(0, 11);
            e.target.value = value;
        });

        // Valida√ß√£o em tempo real do CPF
        document.getElementById('cpf').addEventListener('blur', function(e) {
            var cpf = e.target.value;
            if (cpf.length === 11 && !/^\d+$/.test(cpf)) {
                alert('CPF deve conter apenas n√∫meros!');
                e.target.focus();
            }
        });
    </script>
